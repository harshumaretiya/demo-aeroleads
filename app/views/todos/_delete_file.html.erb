<% todo.files.each do |file|%>
  <% if file.variable? %>
    <%= link_to image_tag(file.variant(resize: "100x100")), file %>
  <% elsif file.previewable? %>
    <%= link_to image_tag(file.preview(resize: "100x100")), rails_blob_path(file, disposition: :attachment)%>
  <% elsif file.image? %>
      <%= link_to image_tag(file, width:100), file %>
  <% else %>
      <%= link_to file.filename, rails_blob_path(file, disposition: :attachment) %>    
  <% end %>
  <%= link_to 'Remove', delete_image_attachment_todo_path(file),
              method: :delete,
              data: { confirm: 'Are you sure?' } %>
<% end %>